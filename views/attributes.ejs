<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Attributes</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; background-color: #f8f9fa; margin: 0; padding: 20px; color: #343a40; }
        .container { max-width: 1200px; margin: auto; }
        .grid-container { display: grid; grid-template-columns: 2fr 1fr; gap: 30px; }
        .main-content, .form-card { background: #fff; padding: 30px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); }
        h1, h2 { color: #333; border-bottom: 1px solid #dee2e6; padding-bottom: 10px; margin-top: 0; }
        .attribute-list .attribute-item { border: 1px solid #e9ecef; border-radius: 5px; margin-bottom: 15px; }
        .attribute-header { background-color: #f8f9fa; padding: 10px 15px; font-weight: bold; border-bottom: 1px solid #e9ecef; }
        .attribute-values { padding: 15px; display: flex; flex-wrap: wrap; gap: 8px; }
        .value-tag { background-color: #e9ecef; color: #495057; padding: 5px 10px; border-radius: 20px; font-size: 0.9em; }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; font-weight: 500; }
        input, select { width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ced4da; box-sizing: border-box; }
        .btn { padding: 10px 15px; border-radius: 5px; text-decoration: none; font-weight: 500; border: none; cursor: pointer; display: inline-block; }
        .btn-primary { background-color: #007bff; color: white; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Product Attributes</h1>
        <a href="/admin/dashboard" style="display: inline-block; margin-bottom: 20px;">&larr; Back to Dashboard</a>
        <div class="grid-container">
            <main class="main-content">
                <h2>Existing Attributes</h2>
                <div class="attribute-list">
                    <% if (attributes.length > 0) { %>
                        <% attributes.forEach(attribute => { %>
                            <div class="attribute-item">
                                <div class="attribute-header"><%= attribute.name %></div>
                                <div class="attribute-values">
                                    <% if (attribute.AttributeValues.length > 0) { %>
                                        <% attribute.AttributeValues.forEach(val => { %>
                                            <span class="value-tag"><%= val.value %></span>
                                        <% }); %>
                                    <% } else { %>
                                        <p style="margin: 0; font-style: italic; color: #6c757d;">No values yet.</p>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No attributes defined yet.</p>
                    <% } %>
                </div>
            </main>
            <aside class="form-card">
                <h2>Add New Attribute</h2>
                <form action="/admin/attributes/add" method="POST">
                    <div class="form-group">
                        <label for="name">Attribute Name (e.g., Color)</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Attribute</button>
                </form>
                <hr style="margin: 30px 0;">
                <h2>Add Attribute Value</h2>
                <form action="/admin/attributes/add-value" method="POST">
                    <div class="form-group">
                        <label for="attribute_id">Select Attribute</label>
                        <select id="attribute_id" name="attribute_id" required>
                            <option value="">-- Choose --</option>
                            <% attributes.forEach(attribute => { %>
                                <option value="<%= attribute.id %>"><%= attribute.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="value">New Value (e.g., Red)</label>
                        <input type="text" id="value" name="value" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Value</button>
                </form>
            </aside>
        </div>
    </div>
</body>
</html>
