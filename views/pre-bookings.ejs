<!DOCTYPE html>
<html lang="en">

<head>

    <title>

    </title>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('navbar') %>

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Pre-Bookings Management</h1>
                        </div>

                        <!-- Filters -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Filter Pre-Bookings</h6>
                            </div>
                            <div class="card-body">
                                <form method="GET" action="/admin/pre-bookings" class="form-inline">
                                    <label class="mr-2" for="festival_id">Select Festival/Sale:</label>
                                    <select name="festival_id" id="festival_id" class="form-control mr-3">
                                        <option value="">-- All Festivals --</option>
                                        <% festivals.forEach(function(festival) { %>
                                            <option value="<%= festival.id %>" <%=selectedFestivalId==festival.id
                                                ? 'selected' : '' %>>
                                                <%= festival.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                    <a href="/admin/pre-bookings" class="btn btn-secondary ml-2">Reset</a>
                                </form>
                            </div>
                        </div>

                        <!-- Pre-Bookings Table -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Pre-Booking List</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Participant</th>
                                                <th>Contact</th>
                                                <th>Festival/Sale</th>
                                                <th>Product</th>
                                                <th>Amount Paid</th>
                                                <th>Date</th>
                                                <th>Mystery Gift</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (participants.length> 0) { %>
                                                <% participants.forEach(function(p) { %>
                                                    <tr>
                                                        <td>
                                                            <%= p.user ? p.user.first_name + ' ' + p.user.last_name
                                                                : 'Unknown' %>
                                                        </td>
                                                        <td>
                                                            <%= p.user ? p.user.email : 'N/A' %><br>
                                                                <%= p.user ? p.user.phone_number : '' %>
                                                        </td>
                                                        <td>
                                                            <%= p.festival ? p.festival.name : 'Unknown' %>
                                                        </td>
                                                        <td>
                                                            <%= p.product_id ? (p.product ? p.product.name
                                                                : 'Product ID: ' + p.product_id) : 'General Entry' %>
                                                        </td>
                                                        <td>â‚¹<%= parseFloat(p.pre_booking_amount_paid).toFixed(2) %>
                                                        </td>
                                                        <td>
                                                            <%= new Date(p.created_at).toLocaleDateString() %>
                                                        </td>
                                                        <td>
                                                            <% if (p.mystery_gift_claimed) { %>
                                                                <span style="color:#000000;"
                                                                    class="badge badge-success">Gift
                                                                    Claimed</span>
                                                                <% } else { %>
                                                                    <span style="color:#000000;"
                                                                        class="badge badge-warning">Pending</span>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (!p.mystery_gift_claimed) { %>
                                                                <form action="/admin/pre-bookings/give-gift"
                                                                    method="POST" style="display:inline;"
                                                                    onsubmit="return confirm('Are you sure you want to mark the Mystery Gift as claimed for this user?');">
                                                                    <input type="hidden" name="participant_id"
                                                                        value="<%= p.id %>">
                                                                    <button type="submit" class="btn btn-info btn-sm">
                                                                        <i class="fas fa-gift"></i> Give Gift
                                                                    </button>
                                                                </form>
                                                                <% } else { %>
                                                                    <button class="btn btn-secondary btn-sm" disabled>
                                                                        <i class="fas fa-check"></i> Given
                                                                    </button>
                                                                    <% } %>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="8" class="text-center">No pre-bookings
                                                                    found matching your criteria.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->


        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->



</body>

</html>