    <%- include('./navbar') %>

<div class="container">
    <div class="header">
        <a href="/admin/products">&larr; Back to Products</a>
        <h1><%= title %></h1>
    </div>

    <form action="/admin/products/update/<%= product.id %>" method="POST" enctype="multipart/form-data" class="product-form">
        
        <!-- Main Product Details -->
        <div class="card">
            <h2>Product Details</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label for="name">Product Name</label>
                    <input type="text" id="name" name="name" value="<%= product.name %>" required>
                </div>
                <div class="form-group">
                    <label for="brand">Brand</label>
                    <input type="text" id="brand" name="brand" value="<%= product.brand || '' %>">
                </div>
                <div class="form-group">
                    <label for="category_id">Category</label>
                    <select id="category_id" name="category_id" required>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>" <%= product.category_id === category.id ? 'selected' : '' %>>
                                <%= category.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="is_published">Status</label>
                    <select id="is_published" name="is_published">
                        <option value="true" <%= product.is_published ? 'selected' : '' %>>Published</option>
                        <option value="false" <%= !product.is_published ? 'selected' : '' %>>Draft</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="6" required><%= product.description %></textarea>
            </div>
        </div>

        <!-- Product Media Management -->
        <div class="card">
            <h2>Product Media</h2>
            <div class="form-group">
                <label for="product_media">Add New Images/Videos only 10 media file</label>
                <input type="file" id="product_media" name="product_media" multiple accept="image/*,video/*">
                <small class="form-text">Supported formats: Images (JPG, PNG, GIF, WebP) and Videos (MP4, WebM, MOV)</small>
            </div>
            <div id="existing-media">
                <label>Existing Media</label>
                <% if (product.media && product.media.length > 0) { %>
                    <div class="media-grid">
                        <% product.media.forEach(file => { %>
                            <div class="media-item">
                                <% if (file.media_type === 'image') { %>
                                    <img src="<%= file.url %>" alt="<%= file.alt_text %>" class="media-thumbnail">
                                <% } else if (file.media_type === 'video') { %>
                                    <video class="media-thumbnail" controls preload="metadata">
                                        <source src="<%= file.url %>" type="video/mp4">
                                        <source src="<%= file.url %>" type="video/webm">
                                        <source src="<%= file.url %>" type="video/quicktime">
                                        Your browser does not support the video tag.
                                    </video>
                                    <div class="media-type-badge">VIDEO</div>
                                <% } else { %>
                                    <div class="media-placeholder">
                                        <span class="media-icon">üìÅ</span>
                                        <p><%= file.url.split('/').pop() %></p>
                                    </div>
                                <% } %>
                                <div class="media-info">
                                    <small><%= file.media_type.toUpperCase() %></small>
                                </div>
                                <div class="media-delete">
                                    <input type="checkbox" name="delete_media" value="<%= file.id %>" id="delete_media_<%= file.id %>">
                                    <label for="delete_media_<%= file.id %>">Delete</label>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="no-media">No existing media files.</p>
                <% } %>
            </div>
        </div>

        <!-- Product Variations & Inventory -->
        <div class="card">
            <h2>Product Variations & Inventory</h2>
            <div id="variations-container">
                <% if (product.variants && product.variants.length > 0) { %>
                    <% product.variants.forEach((variant, index) => { %>
                        <div class="variation-item">
                            <h4>Variation <%= index + 1 %></h4>
                            <input type="hidden" name="variations[<%= index %>][id]" value="<%= variant.id %>">
                            <div class="form-grid">
                                <div class="form-group">
                                    <label>SKU</label>
                                    <input type="text" name="variations[<%= index %>][sku]" value="<%= variant.sku %>" required>
                                </div>
                                <div class="form-group">
                                    <label>Price</label>
                                    <input type="number" name="variations[<%= index %>][price]" value="<%= variant.price %>" step="0.01" required>
                                </div>
                                <div class="form-group">
                                    <label>Stock</label>
                                    <input type="number" name="variations[<%= index %>][stock_quantity]" value="<%= variant.stock_quantity %>" required>
                                </div>
                            </div>
                            <div class="attributes-container">
                                <% if (variant.AttributeValues && variant.AttributeValues.length > 0) { %>
                                    <% variant.AttributeValues.forEach((av, attrIndex) => { %>
                                        <div class="attribute-item">
                                            <input 
                                                type="text" 
                                                name="variations[<%= index %>][attributes][<%= attrIndex %>][name]" 
                                                placeholder="e.g., Color" 
                                                value="<%= av.Attribute ? av.Attribute.name : '' %>" 
                                                >
                                            <input 
                                                type="text" 
                                                name="variations[<%= index %>][attributes][<%= attrIndex %>][value]" 
                                                placeholder="e.g., Red" 
                                                value="<%= av.value %>" 
                                                >
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="attribute-item">
                                        <input type="text" name="variations[<%= index %>][attributes][0][name]" placeholder="e.g., Color" >
                                        <input type="text" name="variations[<%= index %>][attributes][0][value]" placeholder="e.g., Red" >
                                    </div>
                                <% } %>
                                <button type="button" class="btn-add-attribute">Add Attribute</button>
                            </div>
                            <button type="button" class="btn-remove-variation" onclick="removeVariation(this)">Remove Variation</button>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="variation-item">
                        <h4>Variation 1</h4>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>SKU</label>
                                <input type="text" name="variations[0][sku]" required>
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <input type="number" name="variations[0][price]" step="0.01" required>
                            </div>
                            <div class="form-group">
                                <label>Stock</label>
                                <input type="number" name="variations[0][stock_quantity]" required>
                            </div>
                        </div>
                        <div class="attributes-container">
                            <div class="attribute-item">
                                <input type="text" name="variations[0][attributes][0][name]" placeholder="e.g., Color" required>
                                <input type="text" name="variations[0][attributes][0][value]" placeholder="e.g., Red" required>
                            </div>
                        </div>
                        <button type="button" class="btn-add-attribute">Add Attribute</button>
                    </div>
                <% } %>
            </div>
            <button type="button" id="add-variation-btn" class="btn btn-secondary">Add Another Variation</button>
        </div>
        
        <button type="submit" class="btn btn-primary">Update Product</button>
    </form>
</div>

<script>
    // Add new variation
    document.getElementById('add-variation-btn').addEventListener('click', () => {
        const container = document.getElementById('variations-container');
        const idx = container.children.length;
        const html = `
            <div class="variation-item">
                <hr>
                <h4>New Variation</h4>
                <div class="form-grid">
                    <div class="form-group">
                        <label>SKU</label>
                        <input type="text" name="variations[${idx}][sku]" placeholder="SKU-${idx+1}" required>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" name="variations[${idx}][price]" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label>Stock</label>
                        <input type="number" name="variations[${idx}][stock_quantity]" required>
                    </div>
                </div>
                <div class="attributes-container">
                    <div class="attribute-item">
                        <input type="text" name="variations[${idx}][attributes][0][name]" placeholder="e.g., Color" required>
                        <input type="text" name="variations[${idx}][attributes][0][value]" placeholder="e.g., Red" required>
                    </div>
                </div>
                <button type="button" class="btn-add-attribute">Add Attribute</button>
                <button type="button" class="btn-remove-variation" onclick="removeVariation(this)">Remove Variation</button>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
    });

    // Add attribute to variation
    document.getElementById('variations-container').addEventListener('click', e => {
        if (e.target.classList.contains('btn-add-attribute')) {
            const attrs = e.target.previousElementSibling;
            const vidx = Array.from(attrs.parentElement.parentElement.children).indexOf(attrs.parentElement);
            const aidx = attrs.children.length;
            const html = `
                <div class="attribute-item">
                    <input type="text" name="variations[${vidx}][attributes][${aidx}][name]" placeholder="e.g., Size" required>
                    <input type="text" name="variations[${vidx}][attributes][${aidx}][value]" placeholder="e.g., Large" required>
                    <button type="button" class="btn-remove-attribute" onclick="removeAttribute(this)">Remove</button>
                </div>
            `;
            attrs.insertAdjacentHTML('beforeend', html);
        }
    });

    // Remove variation
    function removeVariation(btn) {
        btn.closest('.variation-item').remove();
        updateIndices();
    }

    // Remove attribute
    function removeAttribute(btn) {
        btn.closest('.attribute-item').remove();
    }

    // Re-index after removal
    function updateIndices() {
        document.querySelectorAll('.variation-item').forEach((vi, i) => {
            vi.querySelectorAll('input[name]').forEach(inp => {
                inp.name = inp.name.replace(/variations\[\d+\]/, `variations[${i}]`);
            });
        });
    }
</script>

<style>
    .container { max-width: 900px; margin: 2rem auto; font-family: sans-serif; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; }
    .card { background: #f9f9f9; border: 1px solid #ddd; border-radius: 8px; padding: 1.5rem; margin-bottom: 2rem; }
    .form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; }
    .form-group { display: flex; flex-direction: column; }
    label { font-weight: bold; margin-bottom: 0.5rem; }
    input, select, textarea { padding: 0.75rem; border: 1px solid #ccc; border-radius: 4px; font-size: 1rem; }
    .btn { padding: 0.75rem 1.5rem; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem; margin: 0.5rem; }
    .btn-primary { background-color: #007bff; color: white; }
    .btn-secondary { background-color: #6c757d; color: white; }
    .btn-remove-variation { background-color: #dc3545; color: white; }
    .btn-remove-attribute { background-color: #dc3545; color: white; font-size: 0.8rem; padding: 0.25rem 0.5rem; }
    .variation-item { margin-bottom: 1.5rem; padding: 1rem; border: 1px solid #ddd; border-radius: 4px; background: #fff; }
    .attribute-item { display: flex; gap: 0.5rem; margin-top: 0.5rem; align-items: center; }
    .media-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1rem; margin-top: 1rem; }
    .media-item { position: relative; border: 1px solid #ddd; border-radius: 8px; overflow: hidden; background: #f8f9fa; }
    .media-thumbnail { width: 100%; height: 120px; object-fit: cover; display: block; }
    .media-placeholder { width: 100%; height: 120px; display: flex; flex-direction: column; align-items: center; justify-content: center; background: #e9ecef; color: #6c757d; }
    .media-icon { font-size: 2rem; margin-bottom: 0.5rem; }
    .media-type-badge { position: absolute; top: 5px; right: 5px; background: rgba(0,0,0,0.7); color: white; padding: 2px 6px; border-radius: 3px; font-size: 0.7rem; font-weight: bold; }
    .media-info { padding: 0.5rem; text-align: center; background: white; border-top: 1px solid #eee; }
    .media-info small { color: #6c757d; font-weight: 500; }
    .media-delete { padding: 0.5rem; text-align: center; background: #f8f9fa; border-top: 1px solid #eee; }
    .media-delete input[type="checkbox"] { margin-right: 0.25rem; }
    .media-delete label { font-size: 0.8rem; color: #dc3545; cursor: pointer; }
    .no-media { color: #6c757d; font-style: italic; text-align: center; padding: 2rem; background: #f8f9fa; border-radius: 4px; margin-top: 1rem; }
    .form-text { color: #6c757d; font-size: 0.875rem; margin-top: 0.25rem; display: block; }
    @media (max-width: 768px) {
        .media-grid { grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); gap: 0.5rem; }
        .media-thumbnail, .media-placeholder { height: 100px; }
    }
</style>
