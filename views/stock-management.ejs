

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .stock-low { background-color: #fff2cd !important; }
        .stock-out { background-color: #f8d7da !important; }
        .stock-good { background-color: #d1e7dd !important; }
        .variant-row:hover { background-color: #f8f9fa; }
        .stock-input { width: 80px; }
        .attribute-badge { font-size: 0.75rem; }
        .filter-card { box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); }
        .btn-group .btn.active {
            background-color: var(--bs-primary);
            color: white;
            border-color: var(--bs-primary);
        }
        .badge-removable {
            position: relative;
            padding-right: 20px;
        }
        .badge-removable a {
            position: absolute;
            right: 5px;
            top: 50%;
            transform: translateY(-50%);
            text-decoration: none;
            font-weight: bold;
        }
        .card-clickable:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        .card-clickable {
            cursor: pointer;
            transition: all 0.3s ease;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">
                <i class="fas fa-boxes me-2"></i>Admin Panel
            </a>
            <div>
                <a href="/admin/dashboard" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col">
                <h2><i class="fas fa-warehouse me-2"></i><%= title %></h2>
                <p class="text-muted">Manage stock levels for all product variants</p>
            </div>
        </div>

        <!-- Filters -->
        <div class="card filter-card mb-4">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-filter me-2"></i>Filters
                </h5>
                <form method="GET" action="/admin/stock" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select name="category_id" class="form-select">
                            <option value="">All Categories</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id %>" 
                                    <%= currentFilters.category_id == category.id ? 'selected' : '' %>>
                                    <%= category.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Product</label>
                        <select name="product_id" class="form-select">
                            <option value="">All Products</option>
                            <% allProducts.forEach(product => { %>
                                <option value="<%= product.id %>" 
                                    <%= currentFilters.product_id == product.id ? 'selected' : '' %>>
                                    <%= product.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <!-- Stock Status Filter -->
                    <div class="col-md-3">
                        <label class="form-label">Stock Status</label>
                        <select name="stock_status" class="form-select">
                            <option value="">All Stock Levels</option>
                            <option value="in_stock" <%= currentFilters.stock_status === 'in_stock' ? 'selected' : '' %>>
                                In Stock (>10)
                            </option>
                            <option value="low_stock" <%= currentFilters.stock_status === 'low_stock' ? 'selected' : '' %>>
                                Low Stock (1-10)
                            </option>
                            <option value="out_of_stock" <%= currentFilters.stock_status === 'out_of_stock' ? 'selected' : '' %>>
                                Out of Stock (0)
                            </option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search me-1"></i>Filter
                        </button>
                        <a href="/admin/stock" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Clear
                        </a>
                    </div>
                </form>
                
                <!-- Quick Filter Buttons -->
                <div class="mt-3">
                    <h6 class="mb-2">Quick Filters:</h6>
                    <div class="btn-group" role="group">
                        <a href="/admin/stock" class="btn btn-outline-secondary btn-sm <%= !currentFilters.stock_status ? 'active' : '' %>">
                            <i class="fas fa-list me-1"></i>All Items
                        </a>
                        <a href="/admin/stock?stock_status=in_stock" class="btn btn-outline-success btn-sm <%= currentFilters.stock_status === 'in_stock' ? 'active' : '' %>">
                            <i class="fas fa-check-circle me-1"></i>In Stock
                        </a>
                        <a href="/admin/stock?stock_status=low_stock" class="btn btn-outline-warning btn-sm <%= currentFilters.stock_status === 'low_stock' ? 'active' : '' %>">
                            <i class="fas fa-exclamation-triangle me-1"></i>Low Stock
                        </a>
                        <a href="/admin/stock?stock_status=out_of_stock" class="btn btn-outline-danger btn-sm <%= currentFilters.stock_status === 'out_of_stock' ? 'active' : '' %>">
                            <i class="fas fa-times-circle me-1"></i>Out of Stock
                        </a>
                    </div>
                </div>
                
                <!-- Active Filter Tags -->
                <% if (currentFilters.category_id || currentFilters.product_id || currentFilters.stock_status) { %>
                    <div class="mt-3">
                        <h6 class="mb-2">Active Filters:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <% if (currentFilters.category_id) { %>
                                <% 
                                const selectedCategory = categories.find(c => c.id == currentFilters.category_id);
                                const categoryFilterParams = new URLSearchParams(currentFilters);
                                categoryFilterParams.delete('category_id');
                                %>
                                <span class="badge bg-info badge-removable">
                                    Category: <%= selectedCategory ? selectedCategory.name : 'Unknown' %>
                                    <a href="/admin/stock?<%= categoryFilterParams.toString() %>" class="text-white">×</a>
                                </span>
                            <% } %>
                            <% if (currentFilters.product_id) { %>
                                <% 
                                const selectedProduct = allProducts.find(p => p.id == currentFilters.product_id);
                                const productFilterParams = new URLSearchParams(currentFilters);
                                productFilterParams.delete('product_id');
                                %>
                                <span class="badge bg-info badge-removable">
                                    Product: <%= selectedProduct ? selectedProduct.name : 'Unknown' %>
                                    <a href="/admin/stock?<%= productFilterParams.toString() %>" class="text-white">×</a>
                                </span>
                            <% } %>
                            <% if (currentFilters.stock_status) { %>
                                <% 
                                const stockFilterParams = new URLSearchParams(currentFilters);
                                stockFilterParams.delete('stock_status');
                                const statusText = currentFilters.stock_status === 'in_stock' ? 'In Stock' : 
                                                 currentFilters.stock_status === 'low_stock' ? 'Low Stock' : 'Out of Stock';
                                %>
                                <span class="badge bg-info badge-removable">
                                    Status: <%= statusText %>
                                    <a href="/admin/stock?<%= stockFilterParams.toString() %>" class="text-white">×</a>
                                </span>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Stock Overview Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <a href="/admin/stock" class="text-decoration-none">
                    <div class="card text-white bg-primary card-clickable">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total Variants</h6>
                                    <h4 id="totalVariants">0</h4>
                                </div>
                                <i class="fas fa-cube fa-2x opacity-75"></i>
                            </div>
                            <div class="mt-2">
                                <span class="text-white text-decoration-none small">
                                    <i class="fas fa-eye me-1"></i>View All
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="/admin/stock?stock_status=in_stock" class="text-decoration-none">
                    <div class="card text-white bg-success card-clickable">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">In Stock</h6>
                                    <h4 id="inStockVariants">0</h4>
                                </div>
                                <i class="fas fa-check-circle fa-2x opacity-75"></i>
                            </div>
                            <div class="mt-2">
                                <span class="text-white text-decoration-none small">
                                    <i class="fas fa-filter me-1"></i>View In Stock
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="/admin/stock?stock_status=low_stock" class="text-decoration-none">
                    <div class="card text-white bg-warning card-clickable">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Low Stock</h6>
                                    <h4 id="lowStockVariants">0</h4>
                                </div>
                                <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                            </div>
                            <div class="mt-2">
                                <span class="text-white text-decoration-none small">
                                    <i class="fas fa-filter me-1"></i>View Low Stock
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="/admin/stock?stock_status=out_of_stock" class="text-decoration-none">
                    <div class="card text-white bg-danger card-clickable">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Out of Stock</h6>
                                    <h4 id="outOfStockVariants">0</h4>
                                </div>
                                <i class="fas fa-times-circle fa-2x opacity-75"></i>
                            </div>
                            <div class="mt-2">
                                <span class="text-white text-decoration-none small">
                                    <i class="fas fa-filter me-1"></i>View Out of Stock
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Stock Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Stock Details
                    <% if (currentFilters.stock_status) { %>
                        <span class="badge bg-secondary ms-2">
                            <%= currentFilters.stock_status === 'in_stock' ? 'In Stock' : 
                               currentFilters.stock_status === 'low_stock' ? 'Low Stock' : 'Out of Stock' %>
                        </span>
                    <% } %>
                </h5>
                <button type="button" class="btn btn-success btn-sm" onclick="bulkSaveStock()">
                    <i class="fas fa-save me-1"></i>Save All Changes
                </button>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th>Category</th>
                                <th>SKU</th>
                                <th>Attributes</th>
                                <th>Price</th>
                                <th>Current Stock</th>
                                <th>Update Stock</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% 
                            let totalVariants = 0;
                            let inStock = 0;
                            let lowStock = 0;
                            let outOfStock = 0;
                            %>
                            
                            <% products.forEach(product => { %>
                                <% if (product.variants && product.variants.length > 0) { %>
                                    <% product.variants.forEach(variant => { 
                                        totalVariants++;
                                        let stockClass = '';
                                        let stockStatus = '';
                                        
                                        if (variant.stock_quantity === 0) {
                                            stockClass = 'stock-out';
                                            stockStatus = 'Out of Stock';
                                            outOfStock++;
                                        } else if (variant.stock_quantity <= 10) {
                                            stockClass = 'stock-low';
                                            stockStatus = 'Low Stock';
                                            lowStock++;
                                        } else {
                                            stockClass = 'stock-good';
                                            stockStatus = 'In Stock';
                                            inStock++;
                                        }
                                    %> 
                                        <tr class="variant-row <%= stockClass %>" data-variant-id="<%= variant.id %>">
                                            <td>
                                                <strong><%= product.name %></strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    <%= product.Category ? product.Category.name : 'No Category' %>
                                                </span>
                                            </td>
                                            <td>
                                                <code><%= variant.sku %></code>
                                            </td>
                                            <td>
                                                <% if (variant.AttributeValues && variant.AttributeValues.length > 0) { %>
                                                    <% variant.AttributeValues.forEach(attrValue => { %>
                                                        <span class="badge bg-info attribute-badge me-1">
                                                            <%= attrValue.Attribute.name %>: <%= attrValue.value %>
                                                        </span>
                                                    <% }); %>
                                                <% } else { %>
                                                    <span class="text-muted">No attributes</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <strong>$<%= parseFloat(variant.price).toFixed(2) %></strong>
                                            </td>
                                            <td>
                                                <span class="badge <%= variant.stock_quantity === 0 ? 'bg-danger' : variant.stock_quantity <= 10 ? 'bg-warning' : 'bg-success' %>">
                                                    <%= variant.stock_quantity %>
                                                </span>
                                            </td>
                                            <td>
                                                <input 
                                                    type="number" 
                                                    class="form-control form-control-sm stock-input" 
                                                    value="<%= variant.stock_quantity %>"
                                                    min="0"
                                                    data-variant-id="<%= variant.id %>"
                                                    data-original-stock="<%= variant.stock_quantity %>"
                                                    onchange="markAsChanged(this)"
                                                >
                                            </td>
                                            <td>
                                                <span class="badge <%= variant.stock_quantity === 0 ? 'bg-danger' : variant.stock_quantity <= 10 ? 'bg-warning text-dark' : 'bg-success' %>">
                                                    <%= stockStatus %>
                                                </span>
                                            </td>
                                            <td>
                                                <button 
                                                    class="btn btn-primary btn-sm" 
                                                    onclick="updateSingleStock(<%= variant.id %>, this)"
                                                    title="Save this variant">
                                                    <i class="fas fa-save"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } %>
                            <% }); %>
                            
                            <% if (totalVariants === 0) { %>
                                <tr>
                                    <td colspan="9" class="text-center py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3 d-block"></i>
                                        <h5 class="text-muted">No product variants found</h5>
                                        <p class="text-muted">
                                            <% if (currentFilters.stock_status || currentFilters.category_id || currentFilters.product_id) { %>
                                                No variants match your current filters. Try adjusting or clearing your filters.
                                            <% } else { %>
                                                Try adding some products first.
                                            <% } %>
                                        </p>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <% if (currentFilters.stock_status || currentFilters.category_id || currentFilters.product_id) { %>
                                                <a href="/admin/stock" class="btn btn-outline-primary">
                                                    <i class="fas fa-times me-1"></i>Clear Filters
                                                </a>
                                            <% } %>
                                            <a href="/admin/products" class="btn btn-primary">
                                                <i class="fas fa-plus me-1"></i>Add Products
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="stockToast" class="toast" role="alert">
            <div class="toast-header">
                <i class="fas fa-check-circle text-success me-2"></i>
                <strong class="me-auto">Stock Management</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                Stock updated successfully!
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Update overview cards
        document.getElementById('totalVariants').textContent = '<%= totalVariants %>';
        document.getElementById('inStockVariants').textContent = '<%= inStock %>';
        document.getElementById('lowStockVariants').textContent = '<%= lowStock %>';
        document.getElementById('outOfStockVariants').textContent = '<%= outOfStock %>';

        // Track changes
        let changedInputs = new Set();

        // Handle quick filter clicks with loading state
        document.addEventListener('DOMContentLoaded', function() {
            const quickFilterButtons = document.querySelectorAll('.btn-group a');
            
            quickFilterButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Show loading state
                    const originalContent = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Loading...';
                    this.classList.add('disabled');
                    
                    // Let the navigation happen naturally, but provide visual feedback
                    setTimeout(() => {
                        this.innerHTML = originalContent;
                        this.classList.remove('disabled');
                    }, 2000);
                });
            });
        });

        function markAsChanged(input) {
            const originalStock = parseInt(input.dataset.originalStock);
            const currentStock = parseInt(input.value);
            
            if (originalStock !== currentStock) {
                changedInputs.add(input);
                input.style.borderColor = '#ffc107';
                input.style.backgroundColor = '#fff3cd';
            } else {
                changedInputs.delete(input);
                input.style.borderColor = '';
                input.style.backgroundColor = '';
            }
            
            // Update filter counts
            updateFilterCounts();
        }

        // Update filter counts on the fly when stock is updated
        function updateFilterCounts() {
            const allRows = document.querySelectorAll('.variant-row');
            let total = 0, inStock = 0, lowStock = 0, outOfStock = 0;
            
            allRows.forEach(row => {
                const stockInput = row.querySelector('.stock-input');
                const currentStock = parseInt(stockInput.value);
                total++;
                
                if (currentStock === 0) {
                    outOfStock++;
                } else if (currentStock <= 10) {
                    lowStock++;
                } else {
                    inStock++;
                }
            });
            
            document.getElementById('totalVariants').textContent = total;
            document.getElementById('inStockVariants').textContent = inStock;
            document.getElementById('lowStockVariants').textContent = lowStock;
            document.getElementById('outOfStockVariants').textContent = outOfStock;
        }

        // Update single stock
        async function updateSingleStock(variantId, button) {
            const input = document.querySelector(`input[data-variant-id="${variantId}"]`);
            const newStock = parseInt(input.value);
            
            if (isNaN(newStock) || newStock < 0) {
                showToast('Please enter a valid stock quantity', 'error');
                return;
            }

            try {
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                button.disabled = true;

                const response = await fetch('/admin/stock/update-single', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        variant_id: variantId,
                        stock_quantity: newStock
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    input.dataset.originalStock = newStock;
                    input.style.borderColor = '';
                    input.style.backgroundColor = '';
                    changedInputs.delete(input);
                    showToast(result.message, 'success');
                    
                    // Update row styling based on new stock
                    updateRowStyling(input.closest('tr'), newStock);
                } else {
                    showToast(result.message, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error updating stock', 'error');
            } finally {
                button.innerHTML = '<i class="fas fa-save"></i>';
                button.disabled = false;
            }
        }

        // Bulk save stock
        async function bulkSaveStock() {
            if (changedInputs.size === 0) {
                showToast('No changes to save', 'info');
                return;
            }

            const stockUpdates = Array.from(changedInputs).map(input => ({
                variant_id: input.dataset.variantId,
                stock_quantity: parseInt(input.value)
            }));

            try {
                const response = await fetch('/admin/stock/update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ stock_updates: stockUpdates })
                });

                const result = await response.json();
                
                if (result.success) {
                    // Update all changed inputs
                    changedInputs.forEach(input => {
                        input.dataset.originalStock = input.value;
                        input.style.borderColor = '';
                        input.style.backgroundColor = '';
                        updateRowStyling(input.closest('tr'), parseInt(input.value));
                    });
                    
                    changedInputs.clear();
                    showToast(`Successfully updated ${stockUpdates.length} variants`, 'success');
                    updateFilterCounts();
                } else {
                    showToast(result.message, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error updating stock', 'error');
            }
        }

        // Update row styling based on stock level
        function updateRowStyling(row, stock) {
            row.classList.remove('stock-low', 'stock-out', 'stock-good');
            
            if (stock === 0) {
                row.classList.add('stock-out');
            } else if (stock <= 10) {
                row.classList.add('stock-low');
            } else {
                row.classList.add('stock-good');
            }

            // Update status badge
            const statusBadge = row.querySelector('td:nth-child(8) .badge');
            const stockBadge = row.querySelector('td:nth-child(6) .badge');
            
            if (stock === 0) {
                statusBadge.className = 'badge bg-danger';
                statusBadge.textContent = 'Out of Stock';
                stockBadge.className = 'badge bg-danger';
            } else if (stock <= 10) {
                statusBadge.className = 'badge bg-warning text-dark';
                statusBadge.textContent = 'Low Stock';
                stockBadge.className = 'badge bg-warning';
            } else {
                statusBadge.className = 'badge bg-success';
                statusBadge.textContent = 'In Stock';
                stockBadge.className = 'badge bg-success';
            }
            
            stockBadge.textContent = stock;
        }

        // Show toast notification
        function showToast(message, type = 'success') {
            const toastEl = document.getElementById('stockToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastHeader = toastEl.querySelector('.toast-header');
            
            toastMessage.textContent = message;
            
            // Update icon and color based on type
            const icon = toastHeader.querySelector('i');
            icon.className = type === 'success' ? 'fas fa-check-circle text-success me-2' : 
                            type === 'error' ? 'fas fa-exclamation-circle text-danger me-2' :
                            'fas fa-info-circle text-info me-2';
            
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl+S to save all
            if (e.ctrlKey && e.key === 's') {
                e.preventDefault();
                bulkSaveStock();
            }
        });
    </script>
</body>
</html>
